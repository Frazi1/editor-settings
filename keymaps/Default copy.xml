<keymap version="1" name="Default copy" parent="$default">
  <action id="NextSplitter">
    <keyboard-shortcut first-keystroke="ctrl alt back_slash" />
  </action>
  <action id="PrevSplitter">
    <keyboard-shortcut first-keystroke="ctrl alt slash" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="ctrl back_slash" />
  </action>
  <action id="Unsplit">
    <keyboard-shortcut first-keystroke="shift ctrl back_slash" />
  </action>
</keymap>